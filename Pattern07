class Solution {
public:
    void pattern7(int n) {

        for(int i=1;i<=n;i++)
        {
            //spaces
            for(int j=1;j<=n-i;j++)
            {
                cout<<" ";
            }
            
            for(int k=1;k<=(2*i)-1;k++)
            {
                cout<<"*";
            }

            for(int l=1;l<=n-i;l++)
            {
                cout<<" ";
            }
            cout<<endl;
        }
    }
};
