class Solution {
public:
    void pattern18(int n) {
        char st='A';
        st=st+n-1;
        for(int i=1;i<=n;i++)
        {
            char localSt=st;
            for(int j=1;j<=i;j++)
            {
                cout<<localSt<<" ";
                localSt++;
            }
            st--;
            cout<<endl;
        }
    }
};
